{
  "name": "@thisisagile/easy",
  "version": "0.1.0",
  "description": "Straightforward library for building domain-driven microservice architectures",
  "author": "Sander Hoogendoorn",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index",
  "module": "dist/esm/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:thisisagile/easy.git"
  },
  "keywords": [
    "typescript",
    "microservices",
    "domain-driven-design",
    "evolutionary-architecture"
  ],
  "scripts": {
    "lint": "yarn g:eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "yarn g:prettier --check --write src test *.json",
    "build": "yarn g:tsc tsconfig.json tsconfig.esm.json",
    "test": "yarn g:jest --coverage",
    "prepack": "yarn g:copy-readme"
  },
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@thisisagile/easy-test": "workspace:*",
    "@types/form-urlencoded": "^4.4.0",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/luxon": "3.0.2",
    "@types/validator": "^13.7.7"
  },
  "dependencies": {
    "@types/uuid": "^8.3.4",
    "axios": "^0.27.2",
    "form-urlencoded": "^6.1.0",
    "jsonwebtoken": "^8.5.1",
    "luxon": "^3.0.4",
    "reflect-metadata": "^0.1.13",
    "uuid": "^8.3.2",
    "validator": "^13.7.0"
  }
}
